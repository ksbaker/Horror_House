GameTitle
{
    zorder 100
	
    container Panel(GameTitle/Panel)
    {
      metrics_mode relative

      left 0.1
      top 0.1
      width 0.2
      height 0.4
	  
		element TextArea(GameTitle/Panel/Text1)
		{
		metrics_mode relative
		
         left 0
		 top 0
         font_name BlueHighwayBig
         char_height 0.10
         colour 1 1 1
         caption 420 PROCEDURAL
		}
    }
}

